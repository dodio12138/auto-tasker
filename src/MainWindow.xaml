<Window x:Class="src.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:src"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600" ScrollViewer.VerticalScrollBarVisibility="Disabled" ResizeMode="NoResize" Icon="/tuStatic.png" SizeToContent="WidthAndHeight">
    <Grid Width="600">
        <!-- 输入坐标和时间的文本框 -->
        <TextBox Name="coordinatesTextBox" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="357" Height="275" TextChanged="coordinatesTextBox_TextChanged" FontSize="16" AcceptsReturn="True"/>

        <!-- 点击按钮 -->
        <Button Name="clickButton" Content="开始点击" Margin="10,339,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Height="30" Click="ClickButton_Click"/>
        <Label Content="循环次数：" HorizontalAlignment="Left" Margin="10,290,0,0" VerticalAlignment="Top">
            <Label.ToolTip>
                <ToolTip Content="无限循环设置值为-1" />
            </Label.ToolTip>
        </Label>
        <TextBox Name="loopTime" HorizontalAlignment="Left" Margin="85,290,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="52" Height="25" TextAlignment="Center" VerticalContentAlignment="Center" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="1.132"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.514"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button x:Name="clickButton_stop" Content="停止点击" Margin="267,339,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Height="30" Click="ClickButton_stop"/>
        <Label Content="命令格式：&#xA;x坐标.y坐标.延迟时间;" HorizontalAlignment="Left" Margin="400,10,0,0" VerticalAlignment="Top" Height="40" Width="196"/>
        <Image HorizontalAlignment="Left" Height="121" Margin="510,314,0,0" VerticalAlignment="Top" Width="110" Source="/TU1.png"/>
        <TextBlock x:Name="mousePositionText" Text="鼠标坐标: (0,0)" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,10" Background="#FFF0F0F0"/>
    </Grid>
</Window>
